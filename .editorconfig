# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true

[*.ts]
quote_type = single
max_line_length = 80

[*.md]
max_line_length = off
trim_trailing_whitespace = false